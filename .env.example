# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-postgres-password
POSTGRES_DB=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://postgres:change-this-postgres-password@localhost:5432/postgres

# Security
# Generate with: openssl rand -base64 48
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI Service Configuration (Hugging Face Inference API)
HUGGINGFACEHUB_API_TOKEN=hf_your_token_here
# Optional model override
HF_MODEL_ID=MoritzLaurer/mDeBERTa-v3-base-mnli-xnli
# Optional inference tuning
HF_TIMEOUT_SECONDS=20
HF_MAX_RETRIES=3

# Application Settings
ENV=development
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/minute
RATE_LIMIT_AUTH=10/minute
REDIS_PASSWORD=change-this-redis-password
REDIS_PORT=6379
REDIS_URL=redis://:change-this-redis-password@localhost:6379/0
TASK_CLASSIFICATION_MODE=async
TASK_QUEUE_NAME=task-classification
TASK_QUEUE_RETRY_MAX=3
API_PORT=8000

# Optional: API Configuration
API_TIMEOUT=10
MAX_RETRIES=3
